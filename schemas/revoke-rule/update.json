  "required": [ "rule" ],
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1
    },
    "rule": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "params": {
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "object",
            "description": "Rule spec for Radix filter"
          }
        }
      }
    }
  }
}
